{
  "expo": {
    "scheme": "cobalt",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "orientation": "default",
    "ios": {
      "requireFullScreen": true,
      "bundleIdentifier": "com.maxqian888sorganization.cobaltfitsviewer",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Allow $(PRODUCT_NAME) to record observation videos.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to record audio with observation videos.",
        "NSPhotoLibraryUsageDescription": "Allow $(PRODUCT_NAME) to import photos and videos from your library.",
        "NSPhotoLibraryAddUsageDescription": "Allow $(PRODUCT_NAME) to save processed photos and videos to your library."
      }
    },
    "web": {
      "output": "single"
    },
    "plugins": [
      [
        "expo-screen-orientation",
        {
          "initialOrientation": "DEFAULT"
        }
      ],
      "@react-native-google-signin/google-signin",
      "expo-secure-store",
      "expo-updates",
      "expo-font",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#000000",
          "image": "./assets/splash-icon.png",
          "dark": {
            "image": "./assets/splash-icon.png",
            "backgroundColor": "#000000"
          },
          "imageWidth": 200
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow $(PRODUCT_NAME) to use your location for tagging observation sites."
        }
      ],
      [
        "expo-maps",
        {
          "requestLocationPermission": true,
          "locationPermission": "Allow $(PRODUCT_NAME) to show your location on the map."
        }
      ],
      [
        "expo-calendar",
        {
          "calendarPermission": "Allow $(PRODUCT_NAME) to access your calendar for syncing observation sessions.",
          "remindersPermission": "Allow $(PRODUCT_NAME) to access your reminders for observation planning."
        }
      ],
      [
        "expo-video",
        {
          "supportsPictureInPicture": true,
          "supportsBackgroundPlayback": false
        }
      ],
      "./plugins/withFfmpegKit"
    ],
    "name": "Cobalt FITS Viewer",
    "slug": "cobaltfitsviewer",
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_ERROR_RECOVERY",
      "fallbackToCacheTimeout": 0
    },
    "extra": {
      "eas": {
        "projectId": "3a7b4b23-52bb-4c67-9a64-b5a92de6d2d8"
      }
    },
    "owner": "maxqian888s-organization",
    "android": {
      "package": "com.maxqian888sorganization.cobaltfitsviewer",
      "permissions": [
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.READ_CALENDAR",
        "android.permission.WRITE_CALENDAR",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#000000"
      }
    }
  }
}
